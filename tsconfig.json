{
    "compilerOptions": {
        "target": "es2016",
        "module": "commonjs" /* Specify what module code is generated. */,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "build",
        "baseUrl": "src",
        "resolveJsonModule": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["jest"]
    },
    "exclude": ["node_modules/"],
    "include": ["src/**/*.ts", "test/**/*.ts"]
}
